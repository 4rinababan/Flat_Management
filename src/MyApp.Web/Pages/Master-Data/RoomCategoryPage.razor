@page "/master-data/room-category"
@using MyApp.Web.Shared
@using MyApp.Core.Interfaces
@using MyApp.Core.Entities
@inject IRoomCategoryRepository RoomCategoryService
@inject ToastService ToastService
@inject NavigationManager NavigationManager
@inject IPermissionService PermissionService

<div class="bg-white rounded-lg shadow-sm p-6">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-semibold text-gray-800">Room Category Management</h2>
            <p class="text-gray-600 mt-1">Manage Room Category</p>
        </div>
        <div class="flex items-center">
            @if (CanCreate)
            {
                <button
                    class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200"
                    @onclick="ShowAddRoomCategoryModal">
                    + Add Room Category
                </button>
            }
        </div>
    </div>

    <!-- Search Input -->
    <div class="flex items-center space-x-3 mb-4">
        <div class="relative w-64">
            <input value="@searchTerm" @oninput="HandleSearchTermChange"
                   class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-xl focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition"
                   placeholder="Search room category name or details..." />
            <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
            <thead class="bg-gradient-to-b from-red-700  to-black">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                        Room Category Name
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                        Details
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                        Status
                    </th>
                    @if (CanUpdate || CanDelete)
                    {
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                            Action
                        </th>
                    }
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (PagedRoomCategorys.Any())
                {
                    @foreach (var RoomCategory in PagedRoomCategorys)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@RoomCategory.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@RoomCategory.Details</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="@GetStatusClasses(RoomCategory.IsActive)">
                                    @(RoomCategory.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                @if (CanUpdate)
                                {
                                    <button class="px-2 py-1 bg-blue-500 hover:bg-blue-600 text-white rounded text-sm"
                                        @onclick="() => EditRoomCategory(RoomCategory)">
                                        Edit
                                    </button>
                                }
                                @if (CanDelete)
                                {
                                    <button class="px-2 py-1 bg-red-500 hover:bg-red-600 text-white rounded text-sm"
                                        @onclick="() => ConfirmDelete(RoomCategory.Id, RoomCategory.Name)">
                                        Delete
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                }
                else if (RoomCategorys == null)
                {
                    <tr>
                        <td colspan="5" class="text-center p-4">Loading...</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td colspan="8" class="p-8">
                            <div class="flex flex-col items-center justify-center text-gray-400">
                                <img src="assets/images/empty-data.png" alt="No data" class="h-32 w-32 mb-4" />
                                <div>No Data</div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (FilteredRoomCategorys.Any())
    {
        <div class="mt-6 flex items-center justify-between p-4 bg-gray-50 rounded-xl">
            <div class="text-sm text-gray-600">
                Showing <strong>@((CurrentPage - 1) * PageSize + 1)</strong> to <strong>@(Math.Min(CurrentPage * PageSize, FilteredRoomCategorys.Count()))</strong> of <strong>@FilteredRoomCategorys.Count()</strong> entries
            </div>
            <div class="flex items-center space-x-2">
                <button class="px-3 py-2 rounded-lg border text-sm @(CurrentPage == 1 ? "bg-gray-200 text-gray-500 cursor-not-allowed" : "bg-white hover:bg-gray-100")" @onclick="() => ChangePage(CurrentPage - 1)" disabled="@(CurrentPage == 1)">Previous</button>
                @for (int i = 1; i <= TotalPages; i++)
                {
                    var pageNumber = i;
                    <button class="px-3 py-2 rounded-lg text-sm font-medium @(i == CurrentPage ? "bg-purple-600 text-white" : "bg-white hover:bg-purple-50 border text-gray-700")" @onclick="() => ChangePage(pageNumber)">@i</button>
                }
                <button class="px-3 py-2 rounded-lg border text-sm @(CurrentPage == TotalPages ? "bg-gray-200 text-gray-500 cursor-not-allowed" : "bg-white hover:bg-gray-100")" @onclick="() => ChangePage(CurrentPage + 1)" disabled="@(CurrentPage == TotalPages)">Next</button>
            </div>
        </div>
    }
</div>

<!-- Modal Add/Edit RoomCategory -->
@if (ShowAddModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">@((NewRoomCategory.Id == 0) ? "Add New RoomCategory" :
                            "Edit RoomCategory")</h3>

            <div class="space-y-4">
                <input @bind="NewRoomCategory.Name" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500"
                    placeholder="RoomCategory Name" />
                <input @bind="NewRoomCategory.Details"
                    class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500" placeholder="Details" />
                <div class="flex items-center space-x-2">
                    <input type="checkbox" @bind="NewRoomCategory.IsActive" class="h-4 w-4 text-purple-600" />
                    <label class="text-gray-700">Active</label>
                </div>
            </div>

            <div class="flex justify-end space-x-3 mt-6">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CloseAddModal">Cancel</button>
                <button class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg"
                    @onclick="SaveNewRoomCategory">
                    Save
                </button>
            </div>
        </div>
    </div>
}

<!-- Modal Confirm Delete -->
@if (ShowConfirmModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Confirm Delete</h3>
            <p class="text-gray-700 mb-6">@ConfirmMessage</p>
            <div class="flex justify-end space-x-3">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CancelDelete">Cancel</button>
                <button class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg"
                    @onclick="DeleteConfirmed">Delete</button>
            </div>
        </div>
    </div>
}

<ToastContainer @ref="toastContainer" />

@code {
    private bool CanView = false;
    private bool CanCreate = false;
    private bool CanUpdate = false;
    private bool CanDelete = false;

    private ToastContainer? toastContainer;

    private List<RoomCategory>? RoomCategorys;
    private bool ShowAddModal = false;
    private RoomCategory NewRoomCategory = new RoomCategory();
    private bool ShowConfirmModal = false;
    private int RoomCategoryIdToDelete;
    private string ConfirmMessage = "";

    // Pagination & Search
    private string searchTerm = string.Empty;
    private const int PageSize = 10;
    private int CurrentPage = 1;

    private IEnumerable<RoomCategory> FilteredRoomCategorys =>
        string.IsNullOrWhiteSpace(searchTerm)
        ? RoomCategorys ?? Enumerable.Empty<RoomCategory>()
        : (RoomCategorys ?? Enumerable.Empty<RoomCategory>()).Where(r =>
            (r.Name ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            (r.Details ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
        );

    private int TotalPages => (int)Math.Ceiling(FilteredRoomCategorys.Count() / (double)PageSize);

    private IEnumerable<RoomCategory> PagedRoomCategorys => FilteredRoomCategorys.Skip((CurrentPage - 1) * PageSize).Take(PageSize);

    protected override async Task OnInitializedAsync()
    {
        // Check permissions first
        CanView = await PermissionService.HasPermissionAsync("room-category", "view");
        if (!CanView)
        {
            NavigationManager.NavigateTo("/unauthorized");
            return;
        }

        CanCreate = await PermissionService.HasPermissionAsync("room-category", "create");
        CanUpdate = await PermissionService.HasPermissionAsync("room-category", "update");
        CanDelete = await PermissionService.HasPermissionAsync("room-category", "delete");

        await LoadData();
    }

    private async Task LoadData()
    {
        RoomCategorys = await RoomCategoryService.GetAllAsync();
        ShowAddModal = false;
    }

    private void ShowAddRoomCategoryModal()
    {
        if (!CanCreate)
        {
            ToastService.ShowError("You don't have permission to add new room categories");
            return;
        }

        NewRoomCategory = new RoomCategory(); // reset form
        ShowAddModal = true;
    }

    private void CloseAddModal()
    {
        ShowAddModal = false;
    }

    private void EditRoomCategory(RoomCategory roomCategory)
    {
        if (!CanUpdate)
        {
            ToastService.ShowError("You don't have permission to edit room categories");
            return;
        }

        NewRoomCategory = new RoomCategory
        {
            Id = roomCategory.Id,
            Name = roomCategory.Name,
            Details = roomCategory.Details,
            IsActive = roomCategory.IsActive
        };
        ShowAddModal = true;
    }

    private void ConfirmDelete(int id, string name)
    {
        if (!CanDelete)
        {
            ToastService.ShowError("You don't have permission to delete room categories");
            return;
        }

        RoomCategoryIdToDelete = id;
        ConfirmMessage = $"Are you sure you want to delete the Room Category \"{name}\"?";
        ShowConfirmModal = true;
    }

    private async Task DeleteConfirmed()
    {
        if (!CanDelete)
        {
            ToastService.ShowError("You don't have permission to delete room categories");
            return;
        }

        try
        {
            await RoomCategoryService.DeleteAsync(RoomCategoryIdToDelete);
            await LoadData();
            ShowConfirmModal = false;
            ToastService.ShowSuccess("Success deleted!");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error: {ex.Message}");
        }
    }

    private async Task SaveNewRoomCategory()
    {
        if (NewRoomCategory.Id == 0 && !CanCreate)
        {
            ToastService.ShowError("You don't have permission to create new room categories");
            return;
        }
        else if (NewRoomCategory.Id != 0 && !CanUpdate)
        {
            ToastService.ShowError("You don't have permission to update room categories");
            return;
        }

        try
        {
            if (NewRoomCategory.Id == 0)
                await RoomCategoryService.AddAsync(NewRoomCategory);
            else
                await RoomCategoryService.UpdateAsync(NewRoomCategory);

            await LoadData();
            NewRoomCategory = new RoomCategory();
            ShowAddModal = false;
            ToastService.ShowSuccess("Data Saved!");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error: {ex.Message}");
        }
    }

    private void CancelDelete()
    {
        ShowConfirmModal = false;
    }

    private void HandleSearchTermChange(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        CurrentPage = 1;
    }

    private string GetStatusClasses(bool isActive) =>
        isActive
        ? "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"
        : "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800";

    private void ChangePage(int page)
    {
        if (page >= 1 && page <= TotalPages)
        {
            CurrentPage = page;
        }
    }
}